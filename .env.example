# Binance API credentials
BINANCE_API_KEY=
BINANCE_SECRET_KEY=

# Optional free CryptoPanic token (for higher rate limits)
CRYPTOPANIC_TOKEN=

# Trading settings
PAIR_LIST=BTCUSDT,ETHUSDT
INTERVAL=15m
MAX_POSITION_USDT=100

# Fallback storage path (if not using temp cache)
DATA_PATH=./data_cache

# LightGBM hyperparameters (can override individually)
LGBM_N_ESTIMATORS=300
LGBM_LEARNING_RATE=0.05
LGBM_MAX_DEPTH=6
LGBM_SUBSAMPLE=0.8
LGBM_COLSAMPLE_BYTREE=0.8

# Logging
LOG_LEVEL=INFO
LOG_PATH=logs/app.log
